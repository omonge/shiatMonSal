<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<message-bundle>com.shiatsu.web.bundles.recursos</message-bundle>
	</application>
	 <!-- ========================   Managed Beans =============================== -->
	 
	 
	<!-- ================ Managed Bean ClienteController ================ -->
	 <managed-bean>
	        <managed-bean-name>clienteController</managed-bean-name>
	        <managed-bean-class>com.shiatsu.web.controller.ClienteController</managed-bean-class>
	        <managed-bean-scope>session</managed-bean-scope>
	        <managed-property>
	            <property-name>clienteBo</property-name>
	            <property-class>com.shiatsu.bo.ClienteBo</property-class>
	            <value>#{clienteBo}</value>
        	</managed-property>
	 </managed-bean>
	 <!-- *************************  NavegaciÃ³n ************************************* -->

	<!-- ================ Navigation ClienteController ================ -->
	 <navigation-rule>
	    	<from-view-id>/shiatsuListaClientes.jsp</from-view-id>
	    	<navigation-case>
	    		<from-action>#{clienteController.cargarObjeto}</from-action>
	    		<from-outcome>success</from-outcome>
	    		<to-view-id>/shiatsuActCliente.jsp</to-view-id>
	    	</navigation-case>
	    	<navigation-case>
	    		<from-action>#{clienteController.irAgregar}</from-action>
	    		<from-outcome>success</from-outcome>
	    		<to-view-id>/shiatsuActCliente.jsp</to-view-id>
	    	</navigation-case>
	    </navigation-rule>
		<navigation-rule>
	    	<from-view-id>/shiatsuActCliente.jsp</from-view-id>
	    	<navigation-case>
	    		<from-action>#{clienteController.regresar}</from-action>
	    		<from-outcome>success</from-outcome>
	    		<to-view-id>/shiatsuListaClientes.jsp</to-view-id>
	    	</navigation-case>
	    	<navigation-case>
	    		<from-action>#{clienteController.eliminarCliente}</from-action>
	    		<from-outcome>success</from-outcome>
	    		<to-view-id>/shiatsuListaClientes.jsp</to-view-id>
	    	</navigation-case>
	    </navigation-rule>
		
</faces-config>
