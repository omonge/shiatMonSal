<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-2.0.xsd"
	xmlns:jee="http://www.springframework.org/schema/jee">

    <!--========== Data Sources ==========-->
    <bean id="chronoManagerDS" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:comp/env/jdbc/oraChronoManagerDS" />
    </bean>
    
    <bean id="chronoManagerSF" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
        <property name="dataSource" ref="chronoManagerDS" />
        <property name="mappingResources">
        	<list>
        		<value>com/vvs/chrono/domain/Cliente.hbm.xml</value>
        		<value>com/vvs/chrono/domain/Contacto.hbm.xml</value>
        	</list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.use_outer_join">true</prop>
                <prop key="hibernate.format_sql">true</prop>
                <!--<prop name="hibernate.hbm2ddl.auto">create</prop>
            --></props>
        </property>
    </bean>
	
    <!--========== Data Access Objects ==========-->
    
    <!-- ===================Abstractos================= -->
    <bean id="abstractChronoManagerDAO" class="org.springframework.orm.hibernate3.support.HibernateDaoSupport" abstract="true">
        <property name="sessionFactory" ref="chronoManagerSF"/>
    </bean>
    
    <!-- ===================DAOs de la AplicaciÃ³n================= -->
    <bean id="clienteDao"  class="com.vvs.chrono.dao.impl.ClienteDaoImpl"    parent="abstractChronoManagerDAO" />
    <bean id="contactoDao" class="com.vvs.chrono.dao.impl.ContactoDaoImpl"  parent="abstractChronoManagerDAO" />
</beans>